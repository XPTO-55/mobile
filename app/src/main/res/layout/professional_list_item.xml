<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_professional_profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:src="@drawable/user"
            />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="left"
           android:layout_weight="3"
           >
           <TextView
               android:id="@+id/tv_professional_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:padding="4dp"
               android:textSize="16sp"
               android:textAlignment="textStart"
               android:textColor="@color/black"
               android:textStyle="bold"
               tools:ignore="RtlCompat"
               android:text="@string/txt_hint_professional_name"
               />

           <LinearLayout
               android:id="@+id/rating_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/star_fill"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/star_fill"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/star_fill"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/star_fill"/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/star_fill"/>
           </LinearLayout>


           <TextView
               android:id="@+id/tv_professional_speciality"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:padding="4dp"
               android:textSize="12sp"
               android:textAlignment="textStart"
               android:textColor="@color/black_900"
               android:textFontWeight="@integer/material_motion_duration_short_1"
               tools:ignore="RtlCompat"
               android:text="Especialidade"
               />
           <Button
               style="@style/OrangeButton"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_margin="5dp"
               android:text="@string/txt_learn_more"
               />
       </LinearLayout>

    </LinearLayout>

</GridLayout>