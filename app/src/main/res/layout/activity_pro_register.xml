<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@mipmap/fundo2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="30sp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/logocpa"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_rectangle"
                />
            <LinearLayout
                android:layout_width="1.5dp"
                android:layout_height="53dp"
                android:background="#E4FFFFFF"
                android:layout_marginRight="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cadastro"
                android:textColor="#DDFFFFFF"
                android:textSize="30dp"
                android:layout_marginTop="3.5dp"
                android:fontFamily="@font/montserrat"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/rounded_rectangle_top"
                android:backgroundTint="#fff"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/name"
                            android:layout_margin="17dp"
                            />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/nomeCompleto"
                        android:fontFamily="@font/montserrat_light"
                        android:id="@+id/edt_name"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/email"
                            android:layout_margin="17dp"
                            />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/email"
                        android:fontFamily="@font/montserrat_light"
                        android:id="@+id/edt_email"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="17dp"
                            android:src="@mipmap/date" />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/dataNascimento"
                        android:fontFamily="@font/montserrat_light"
                        android:inputType="date"
                        android:id="@+id/edt_birthday"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/phone"
                            android:layout_margin="17dp"
                            />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/celular"
                        android:fontFamily="@font/montserrat_light"
                        android:inputType="phone"
                        android:id="@+id/edt_phone"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/cpf"
                            android:layout_margin="17dp"
                            />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/cpf"
                        android:fontFamily="@font/montserrat_light"
                        android:inputType="numberSigned"
                        android:id="@+id/edt_cpf"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/lock"
                            android:layout_margin="17dp"
                            />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/senha"
                        android:fontFamily="@font/montserrat_light"
                        android:id="@+id/edt_password"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    >
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="42dp"
                        android:background="@drawable/rounded_left_border"
                        android:backgroundTint="@color/primary"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/confirmpass"
                            android:layout_margin="17dp"
                            />
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#F9F9F9"
                        android:paddingLeft="10dp"
                        android:textSize="15dp"
                        android:hint="@string/confirmaSenha"
                        android:fontFamily="@font/montserrat_light"
                        android:id="@+id/edt_confirm_password"
                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"
            android:gravity="center">
            <Button
                style="@style/OrangeButton"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_rectangle"
                android:text="@string/cancelar"
                android:onClick="telaInicial"/>

            <Button
                style="@style/BlueButton"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:background="@drawable/rounded_rectangle"
                android:text="@string/finalizar"
                android:layout_marginLeft="10dp"
                android:onClick="registerSucess"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>