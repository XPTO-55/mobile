<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginChoice">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@mipmap/fundo2"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/logocpa"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_rectangle"
                />
            <LinearLayout
                android:layout_width="1.5dp"
                android:layout_height="53dp"
                android:background="#E4FFFFFF"
                android:layout_marginRight="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cadastro"
                android:textColor="#DDFFFFFF"
                android:textSize="30dp"
                android:layout_marginTop="3.5sp"
                android:fontFamily="@font/montserrat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600sp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoPerfil"
                android:textSize="18dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="@string/comum"
                style="@style/OrangeButton"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_rectangle"
                android:onClick="cadastroComum"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="@string/profissional"
                style="@style/BlueButton"
                android:background="@drawable/rounded_rectangle"
                android:onClick="cadastroProfissional"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="@string/temConta"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cpaGroup"
                android:layout_marginTop="200dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>